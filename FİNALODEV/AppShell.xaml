<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FİNALODEV.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FİNALODEV"
    Shell.FlyoutBehavior="Flyout"
    Appearing="Shell_Appearing">

    <ShellContent
        Title="Ana sayfa"
        Icon="home.png"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Kurlar"
        Icon="para.png"
        ContentTemplate="{DataTemplate local:KurlarSayfasi}"
        Route="KurlarSayfasi" />
    <ShellContent
        Title="Haberler"
        Icon="news.png"
        ContentTemplate="{DataTemplate local:Haberler}"
        Route="Haberler" />
    <ShellContent
        Title="Hava Durumu"
        Icon="hava.png"
        ContentTemplate="{DataTemplate local:HavaDurumuSayfasi}"
        Route="HavaDurumuSayfasi" />
    <ShellContent
        Title="Yapilacaklar"
        Icon="task.png"
        ContentTemplate="{DataTemplate local:Yapilacaklar}"
        Route="yapilacaklar" />
    <ShellContent
        Title="Ayarlar"
        Icon="setting.png"
        ContentTemplate="{DataTemplate local:AyarlarSayfasi}"
        Route="AyarlarSayfasi" />
</Shell>