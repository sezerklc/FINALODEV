<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
           xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
           x:Class="FİNALODEV.KurlarSayfasi"
           Title="Kurlar Sayfası"
           BackgroundColor="AliceBlue">
    <ContentPage.ToolbarItems>
        <ToolbarItem Order="Primary" IconImageSource="refresh.png" Clicked="ToolbarItem_Clicked" />
    </ContentPage.ToolbarItems>
    <ScrollView>
        <VerticalStackLayout HorizontalOptions="Center" Margin="20">
            <Border WidthRequest="650" Background="White" Stroke="LightSteelBlue" StrokeThickness="2" StrokeShape="RoundRectangle 15">
                <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto" Margin="10">
                    <Grid BackgroundColor="SteelBlue" Grid.Row="0" ColumnDefinitions="*,*,*,*,*" Margin="0,0,0,10" WidthRequest="600">
                        <Label Text="Tür" Grid.Column="0" TextColor="White" Margin="5" FontSize="22" FontAttributes="Bold"/>
                        <Label Text="Alış" Grid.Column="1" TextColor="White" Margin="5" FontSize="22" FontAttributes="Bold"/>
                        <Label Text="Satış" Grid.Column="2" TextColor="White" Margin="5" FontSize="22" FontAttributes="Bold"/>
                        <Label Text="Fark" Grid.Column="3" TextColor="White" Margin="5" FontSize="22" FontAttributes="Bold"/>
                        <Label Text="Yön" Grid.Column="4" TextColor="White" Margin="7" FontSize="22" FontAttributes="Bold"/>
                    </Grid>

                    <Grid Grid.Row="1" ColumnDefinitions="*,*,*,*,*" Margin="0,5" WidthRequest="600">
                        <Label Text="Dolar" Grid.Column="0" FontAttributes="Bold" TextColor="Navy"/>
                        <Label Text="" Grid.Column="1" x:Name="DolarAlis"/>
                        <Label Text="" Grid.Column="2" x:Name="Dolarsatis"/>
                        <Label Text="" Grid.Column="3" x:Name="DolarFark"/>
                        <Image Grid.Column="4" x:Name="DolarYonu" HeightRequest="25" WidthRequest="25"/>
                    </Grid>
                    <BoxView Color="Lavender" HeightRequest="1" Grid.Row="2" Margin="0,5"/>

                    <Grid Grid.Row="3" ColumnDefinitions="*,*,*,*,*" Margin="0,5">
                        <Label Text="Euro" Grid.Column="0" FontAttributes="Bold" TextColor="Navy"/>
                        <Label Text="" Grid.Column="1" x:Name="EuroAlis"/>
                        <Label Text="" Grid.Column="2" x:Name="Eurosatis"/>
                        <Label Text="" Grid.Column="3" x:Name="EuroFark"/>
                        <Image Grid.Column="4" x:Name="EuroYonu" HeightRequest="25" WidthRequest="25"/>
                    </Grid>
                    <BoxView Color="Lavender" HeightRequest="1" Grid.Row="4" Margin="0,5"/>

                    <Grid Grid.Row="5" ColumnDefinitions="*,*,*,*,*" Margin="0,5">
                        <Label Text="Sterlin" Grid.Column="0" FontAttributes="Bold" TextColor="Navy"/>
                        <Label Text="" Grid.Column="1" x:Name="SterlinAlis"/>
                        <Label Text="" Grid.Column="2" x:Name="Sterlinsatis"/>
                        <Label Text="" Grid.Column="3" x:Name="SterlinFark"/>
                        <Image Grid.Column="4" x:Name="SterlinYonu" HeightRequest="25" WidthRequest="25"/>
                    </Grid>

                    <BoxView Color="CornflowerBlue" HeightRequest="2" Grid.Row="6" Margin="0,10"/>

                    <Grid BackgroundColor="LightYellow" Grid.Row="7" ColumnDefinitions="*,*,*,*,*" Margin="0,5">
                        <Label Text="Gram Altın" Grid.Column="0" FontAttributes="Bold" TextColor="DarkGoldenrod"/>
                        <Label Text="" Grid.Column="1" x:Name="AltinAlis"/>
                        <Label Text="" Grid.Column="2" x:Name="Altinsatis"/>
                        <Label Text="" Grid.Column="3" x:Name="AltinFark"/>
                        <Image Grid.Column="4" x:Name="AltinYonu" HeightRequest="25" WidthRequest="25"/>
                    </Grid>

                    <Grid BackgroundColor="LightYellow" Grid.Row="8" ColumnDefinitions="*,*,*,*,*" Margin="0,5">
                        <Label Text="Çeyrek Altın" Grid.Column="0" FontAttributes="Bold" TextColor="DarkGoldenrod"/>
                        <Label Text="" Grid.Column="1" x:Name="cAltinAlis"/>
                        <Label Text="" Grid.Column="2" x:Name="cAltinsatis"/>
                        <Label Text="" Grid.Column="3" x:Name="cAltinFark"/>
                        <Image Grid.Column="4" x:Name="cAltinYonu" HeightRequest="25" WidthRequest="25"/>
                    </Grid>

                    <Grid BackgroundColor="LightYellow" Grid.Row="9" ColumnDefinitions="*,*,*,*,*" Margin="0,5">
                        <Label Text="Gümüş" Grid.Column="0" FontAttributes="Bold" TextColor="DarkGoldenrod"/>
                        <Label Text="" Grid.Column="1" x:Name="GumusAlis"/>
                        <Label Text="" Grid.Column="2" x:Name="Gumussatis"/>
                        <Label Text="" Grid.Column="3" x:Name="GumusFark"/>
                        <Image Grid.Column="4" x:Name="GumusYonu" HeightRequest="25" WidthRequest="25"/>
                    </Grid>

                    <BoxView Color="CornflowerBlue" HeightRequest="2" Grid.Row="10" Margin="0,10"/>

                    <Grid Grid.Row="11" ColumnDefinitions="*,*,*,*,*" Margin="0,5">
                        <Label Text="Filipin Pesosu" Grid.Column="0" FontAttributes="Bold" TextColor="Navy"/>
                        <Label Text="" Grid.Column="1" x:Name="PHPAlis"/>
                        <Label Text="" Grid.Column="2" x:Name="PHPSatis"/>
                        <Label Text="" Grid.Column="3" x:Name="PHPFark"/>
                        <Image Grid.Column="4" x:Name="PHPYonu" HeightRequest="25" WidthRequest="25"/>
                    </Grid>
                    <BoxView Color="Lavender" HeightRequest="1" Grid.Row="12" Margin="0,5"/>

                    <Grid Grid.Row="13" ColumnDefinitions="*,*,*,*,*" Margin="0,5">
                        <Label Text="Kuveyt Dinarı" Grid.Column="0" FontAttributes="Bold" TextColor="Navy"/>
                        <Label Text="" Grid.Column="1" x:Name="KWDAlis"/>
                        <Label Text="" Grid.Column="2" x:Name="KWDSatis"/>
                        <Label Text="" Grid.Column="3" x:Name="KWDFark"/>
                        <Image Grid.Column="4" x:Name="KWDYonu" HeightRequest="25" WidthRequest="25"/>
                    </Grid>
                    <BoxView Color="Lavender" HeightRequest="1" Grid.Row="14" Margin="0,5"/>

                    <Grid Grid.Row="15" ColumnDefinitions="*,*,*,*,*" Margin="0,5">
                        <Label Text="Katar Riyali" Grid.Column="0" FontAttributes="Bold" TextColor="Navy"/>
                        <Label Text="" Grid.Column="1" x:Name="QARAlis"/>
                        <Label Text="" Grid.Column="2" x:Name="QARSatis"/>
                        <Label Text="" Grid.Column="3" x:Name="QARFark"/>
                        <Image Grid.Column="4" x:Name="QARYonu" HeightRequest="25" WidthRequest="25"/>
                    </Grid>
                </Grid>
            </Border>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>